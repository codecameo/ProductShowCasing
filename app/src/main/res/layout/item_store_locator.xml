<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="12dp"
    android:paddingTop="@dimen/location_item_padding">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/abc_text_size_title_material" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:text="Phone +8801535704918"
        android:textSize="@dimen/abc_text_size_caption_material" />


    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone"
        android:textSize="@dimen/abc_text_size_caption_material"
        tools:text="Email sharif.iit.du@gmail.com" />

    <ImageView
        android:id="@+id/iv_near_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_near_me" />

    <TextView
        android:id="@+id/tv_show_room"
        android:layout_below="@id/tv_email"
        android:layout_width="@dimen/tv_show_room_width"
        android:layout_height="@dimen/tv_show_room_height"
        android:layout_marginTop="@dimen/tv_show_room_margin_top"
        android:background="@drawable/tv_show_room_background"
        android:text="@string/btn_show_room"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/abc_text_size_menu_material"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/iv_near_me"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

</RelativeLayout>

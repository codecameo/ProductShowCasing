<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_bottom_margin"
    android:layout_marginLeft="@dimen/list_item_margin"
    android:layout_marginRight="@dimen/list_item_margin"
    app:cardCornerRadius="@dimen/default_card_radius"
    app:cardElevation="@dimen/default_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <bytes.wit.view.customview.ThreeTwoListImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_product" />

        <TextView
            android:layout_marginTop="@dimen/list_item_margin"
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_product_image"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Product Name"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_name"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Package Name"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:layout_marginBottom="@dimen/list_item_margin" />

        <!--<TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_package_name"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="@string/text_view_detail"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_marginBottom="@dimen/list_item_margin" />-->

    </RelativeLayout>
</android.support.v7.widget.CardView>
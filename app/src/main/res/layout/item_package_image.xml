<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/package_image_list_horizontal_padding"
    android:elevation="@dimen/default_card_elevation"
    android:padding="@dimen/package_image_list_horizontal_padding"
    app:cardCornerRadius="@dimen/default_card_radius">

    <FrameLayout
        android:layout_width="156dp"
        android:layout_height="216dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/light_overlay"
            android:scaleType="centerCrop"
            android:src="@drawable/audi_4" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_circle_outline" />

    </FrameLayout>

</android.support.v7.widget.CardView>